@model SalesManagement.Models.GeoViewModels.ProvinceMV
@using SM.Resources
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@Model.TitleHeader</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#">Config option 1</a>
                    </li>
                    <li>
                        <a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form asp-controller="Geographic" asp-action="@Model.FormAction" method="post" class="form-horizontal">
                <p>Sign in today for more expirience.</p>
                <div asp-validation-summary="None" class="text-danger"></div>
                <input asp-for="Id"  type="hidden" value="@Model.Id" />
                <div class="form-group">
                    <label class="col-lg-2 control-label">@Resource.ProvinceCode</label>
                    <div class="col-lg-4">
                        <input asp-for="ProvinceCode" type="text" placeholder="@Resource.ProvinceCode" class="form-control">
                        <span asp-validation-for="ProvinceCode" class="text-danger"></span>
                    </div>
                    <label class="col-lg-2 control-label">@Resource.ProvinceName</label>
                    <div class="col-lg-4">
                        <input asp-for="ProvinceName" type="text" placeholder="@Resource.ProvinceName" class="form-control">
                        <span asp-validation-for="ProvinceName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">@Resource.RegionName</label>
                    <div class="col-lg-4">
                        <select asp-for="RegionCode" asp-items="Model.ListRegion" class="select_region form-control"></select> 
                        <span asp-validation-for="RegionCode" class="text-danger"></span>
                    </div>
                    <div class="col-lg-offset-2 col-lg-4">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="Active" type="checkbox">
                            <label for="checkbox2">@Resource.Active</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">@Model.SubmitDisplay</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
<script type="text/javascript">
        $(".select_region").select2()
</script>
}
