@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.CatalogTitle + " " + ViewBag.CatalogMetaTitle;
    ViewBag.Keywords = ViewBag.CatalogMetaDesc ;
    ViewBag.Description = ViewBag.CatalogMetaKeywords;
}

@model List<CMSApplication.Areas.Administration.Models.GalleryModel>

<div id="contents" style="padding-bottom: 100px;">
    <div class="page_title">
        GALLERY - @ViewBag.CatalogTitle
    </div>
    <div style="padding: 20px 40px 40px 40px; display: block; font-family: Tahoma, Geneva, sans-serif; font-size:12px">
        @if(Model.Count >0)
        {
    <ul class="_ul_catalog_img">
        @foreach(var item in Model)
        {
        <li>
        <a href="@Url.Content("~/Content/File/Remsigns/" + item.Image)" class="fancybox-thumbs" data-fancybox-group="thumb" title="@item.Name">
            <div style="margin-right:20px; border:1px solid #ccc; padding:5px">
              <img class="tonus" src="@Url.Content("~/Content/File/Remsigns/" + item.Thumbnail)" alt="" width="140px" height="119px" style="height: 119px;width:140px;">
            </div>
        </a>
            <div class="gallery_info">
          
            </div>
        </li>
        }
        </ul>
        }else
        {
            <span>No images.</span>
        }
    </div>
    <div class="clear"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.fancybox-thumbs').fancybox();
    });
</script>
