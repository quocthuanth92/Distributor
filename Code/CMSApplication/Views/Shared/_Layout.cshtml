@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@CMS.Common.Helpers.WebHelper.TrimStringForTitle(@ViewBag.Title + @Html.Action("SettingByName", "FESetting", new { SettingName = "title" }))</title>
    <meta name="Keywords" content="@CMS.Common.Helpers.WebHelper.TrimStringForTitle(Html.Action("SettingByName", "FESetting", new { SettingName = "keywords" }).ToString() + " , " + ViewBag.Keywords)" />
    <meta name="Description" content="@CMS.Common.Helpers.WebHelper.TrimStringForTitle(Html.Action("SettingByName", "FESetting", new { SettingName = "Description" }).ToString()+" - "+ViewBag.Description)" />
    <link href="@Url.Content("~/Content/css/stylesheets.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui.min.js")" type="text/javascript"></script>
    <link href="../../Content/css/fancybox/jquery.fancybox.css" rel="stylesheet" />
    <script type="text/javascript" src="../../Content/js/plugins/fancybox/jquery.fancybox.pack.js"></script>
    <script type="text/javascript" src="../../Content/js/plugins/nivoslide/jquery.nivo.slider.pack.js"></script>
    <script type="text/javascript" src="../../Content/js/plugins/nivoslide/jquery.nivo.slider.js"></script>
@*    <link href="../../Content/css/nivoslide/themes/bar/bar.css" rel="stylesheet" />*@
@*    <link href="../../Content/css/nivoslide/themes/dark/dark.css" rel="stylesheet" />*@
    <link href="../../Content/css/nivoslide/themes/default/default.css" rel="stylesheet" />
@*    <link href="../../Content/css/nivoslide/themes/light/light.css" rel="stylesheet" />*@
    <link href="/Content/css/nivoslide/nivo-slider.css" rel="stylesheet" />
    <link href="/Content/css/nivoslide/style.css" rel="stylesheet" />
    <link href="/Content/css/remsigns/main.css" rel="stylesheet" />
    <link href="/Content/css/remsigns/styles.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Content/js/remsigns/rem.js"></script>
   <link href="../../Content/css/icons.css" rel="stylesheet" />

   <script src="@Url.Content("~/Content/js/jquery-ui.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/jquery/jquery.mousewheel.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/sparklines/jquery.sparkline.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uniform/uniform.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/maskedinput/jquery.maskedinput-1.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/validation/languages/jquery.validationEngine-en.js")" charset="utf-8"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/validation/jquery.validationEngine.js")" charset="utf-8"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/qtip/jquery.qtip-1.0.0-rc3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/dataTables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/actions.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/fileuploader.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/fileuploader.css")"/>

</head>

<body>
    <div id="wrappeer">
        <div id="header">
           @if (!User.Identity.IsAuthenticated)
           {
                
            <div class="login" style="position:relative; text-align: right; color:#fff">
                <span style="display:inline-block"><i class="isw-left" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("Logon", "Home")">Login</a></span>

                 <span style="display:inline-block"><i class="isw-unlock" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("ForgotPassword", "Home")">Forgot Password</a></span>
                
                <span style="display:inline-block"><i class="isw-edit" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("Register", "Home")">Register</a></span>                                                                                 
            </div>
           }
           else
           {
            <div class="login" style="position:relative; text-align: right; color:#fff">
                @if (User.IsInRole("Administrator"))
                { 
                    <span style="display:inline-block"><i class="isw-settings" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="/Administration">Administration</a></span>
                }
                <span style="display:inline-block"><i class="isw-user" style="padding:0 5px; margin-top:3px"></i><strong>@User.Identity.Name</strong></span>
                <span style="display:inline-block"><i class="isw-list" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("Dashboard", "Home")">Dashboard</a></span>
                
                 <span style="display:inline-block"><i class="isw-text_document" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("Index", "Order")">My Order</a></span>
                 <span style="display:inline-block"><i class="isw-right" style="padding:0 5px; margin-top:3px"></i><a style="color:#fff" href="@Url.Action("LogOff", "Home")">LogOut</a></span>                                         </div>
           }

            <div id="logo">
                <a href="/">
                    <img src="../../Content/img/remsigns/images/logo.jpg" width="246" height="132" />
                </a>
            </div>
            <div id="phrase"><strong><em>@Html.Action("SettingByName", "FESetting", new { SettingName = "headline" })</em></strong></div>
            <div id="social">
                <div id="socialic">
                    <div align="right">

                    </div>
                </div>


                <div id="phonenum">
                    @Html.Action("SettingByName", "FESetting", new { SettingName = "hotline" })
                </div>
            </div>
        </div>
        <div id="nav">
             @Html.Action("Index", "Navigation")
        </div>
        <div id="huge_slider" class="content">
            <div id="contents" class="workplace">
                @RenderBody()
             </div>
        </div>

    </div>
    <div id="footer">
        <div id="cerrojo">
            <div id="cerr1" style="color:#fff">
               @Html.Action("TopicBySystemWithTitle", "Topic", new { systemname = "contactus", show_title = true })


            </div>
            <div id="cerr2">
                <p>@Html.Action("FooterMenu", "Navigation")</p>
                <p>@Html.Action("SettingByName", "FESetting", new { SettingName = "Copyright" })</p>
            </div>
            <div id="cerr3">
                <div align="center">
                    @Html.Action("TopicBySystemWithTitle", "Topic", new { systemname = "social", show_title = false })
                </div>
            </div>


        </div>




    </div>

    <div class="loading-box" style="position:fixed; top:30%; left:50%; background:#333; padding:20px; border-radius:5px;opacity:0.8; display:none">
        <img src="../../Content/img/loaders/c_loader_bw.gif" title="c_loader_bw.gif">
    </div>
        <script type="text/javascript">
            $(window).load(function () {
                $('#slider').nivoSlider();
            });
    </script>
</body>
</html>
