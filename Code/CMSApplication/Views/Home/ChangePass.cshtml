@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_ClientProfileLayout.cshtml";
}

@model CMSApplication.Models.ChangePasswordModel

<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents">
            </div>
            <h1>Change Password</h1>
            <div class="clear">
            </div>
        </div>
        <div class="block-fluid">
            @using (Html.BeginForm("ChangePass", "Home", new { enctype = "multipart/form-data" }))
            {
                <div class="warning-area">
                </div>
                <div class="row-form">
                    <div class="span2">
                        Old Password :
                    </div>
                    <div class="span5">
                        @Html.PasswordFor(model => Model.OldPassword)
                        @Html.ValidationMessageFor(model => model.OldPassword)</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        New Password :
                    </div>
                    <div class="span5">
                        @Html.PasswordFor(model => Model.NewPassword)
                        @Html.ValidationMessageFor(model => model.NewPassword)</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Confirm Password : </div>
                    <div class="span5">
                        @Html.PasswordFor(model => Model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
                         <div class="clear"></div>
                </div>
                <div class="row-form">
                    <div class="span12">
                        @ViewBag.Message
                   </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                    </div>
                    <div class="span5">
                    <input type="submit" name="save" value="Save" class="btn" /></div>
                     <div class="clear"></div>
                </div>
            }
        </div>
    </div>
</div>

