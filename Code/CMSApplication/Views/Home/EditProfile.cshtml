@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_ClientProfileLayout.cshtml";
}

@model CMSApplication.Models.UserModel

<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents">
            </div>
            <h1>Profile Setting</h1>
            <div class="clear">
            </div>
        </div>
        <div class="block-fluid">
            @using (Html.BeginForm("EditProfile", "Home",FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m=>m.Id)
                <div class="warning-area">
                </div>
                <div class="row-form">
                    <div class="span2">
                        Full name
                    </div>
                    <div class="span5">
                        @Html.TextBoxFor(model => Model.FullName, new { @style = "width:500px" })
                        @Html.ValidationMessageFor(model => model.FullName)</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Email
                    </div>
                    <div class="span5">
                        @Html.TextBoxFor(model => Model.Email, new { @style = "width:500px", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Email)</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Company Name
                    </div>
                    <div class="span5">
                        @Html.TextBoxFor(model => Model.CompanyName, new { @style = "width:500px" })
                        @Html.ValidationMessageFor(model => model.CompanyName)</div>
                    
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Company Logo
                    </div>
                    <div class="span5">
                        <input type="file" name="FileUp" />
                      </div>
                    <div class="span5" style="text-align:center">

                    <img height="100" width="100" src="@Url.Content("~/Content/File/Remsigns/" + Model.CompanyLogo)" />
                        </div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Description
                    </div>
                    <div class="span5">
                        @Html.TextAreaFor(model => Model.Description, new { @style = "width:500px; height:150px" })
                        @Html.ValidationMessageFor(model => model.Description)</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Address</div>
                    <div class="span5">
                        @Html.EditorFor(model => Model.Address)
                        @Html.ValidationMessageFor(model => model.Address)</div>
                         <div class="clear"></div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        Phone : </div>
                    <div class="span5">
                        @Html.EditorFor(model => Model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)</div>
                         <div class="clear"></div>
                </div>
                
                <div class="row-form">
                    <div class="span2">
                    </div>
                    <div class="span5">
                    <input type="submit" name="save" value="Save" class="btn" /></div>
                     <div class="clear"></div>
                </div>
            }
        </div>
    </div>
</div>

